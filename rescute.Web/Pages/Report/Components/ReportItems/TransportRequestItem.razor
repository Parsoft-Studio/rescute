@inherits ReportItemBase
@implements INavigationItem
@inject IStringLocalizer<LocalizationResources> Localizer
<div class="card transport-request">
    <ItemTopBar Parent="@(this)"/>
    <div class="card-body">
        <NavigationMap Parent="@(this)"/>
    </div>
    <div class="card-footer">
        <div class="footer-title">
        </div>
        <div class="footer-subtitle">
            <p>@Description</p>
        </div>
        <div class="footer-toolbar dropup">
            <a href="" class="btn btn-secondary btn-sm"><i
                    class="fa fa-fw fa-comment"></i>&nbsp;<span>12 پیام</span></a>
            <ItemMenu Parent="@(this)"/>
        </div>
    </div>
</div>

@code {

    protected override string ReportItemName => "transportRequest";

    public override string ReportItemCaption => Localizer[LocalizationResources.TransportRequest];
    [Parameter] public required string Location { get; set; }
    [Parameter] public required string Distance { get; set; }
    [Parameter] public required string Destination { get; set; }
}